<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Background">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/favouritesDetailToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/favouritesDetailBackView"
            style="@style/BackButton"
            android:contentDescription="TODO" />

        <TextView
            style="@style/ToolbarTheme"
            android:text="@string/favourites_detail"
            app:layout_constraintStart_toEndOf="@id/favouritesDetailBackView"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="FAVOURITES DETAIL"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favouritesDetailToolbar" />

</android.support.constraint.ConstraintLayout>